				<artifactId>northstar-strategy-cta</artifactId>
				<version>${northstar-version}</version>
			</dependency>
			<dependency>
				<groupId>tech.xuan-wu</groupId>
				<artifactId>northstar-gateway-api</artifactId>
				<version>${northstar-version}</version>
