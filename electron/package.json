{
  "name": "northstar",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "electron-webpack dev",
    "compile": "electron-webpack",
    "dist": "yarn compile && electron-builder",
    "dist:dir": "yarn dist --dir -c.compression=store -c.mac.identity=null",
    "electron:generate-icons": "electron-icon-builder --input=./public/logo.ico --output=dist --flatten"
  },
  "build": {
    "extraResources": ["config.json"],
    "win": {
      "icon": "./src/main/logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "guid": "idea",
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/main/logo.ico",
      "uninstallerIcon": "./src/main/logo.ico",
      "installerHeaderIcon": "./src/main/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "idea"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "source-map-support": "^0.5.16"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.3",
    "electron": "^13.1.7",
    "electron-builder": "^22.4.1",
    "electron-webpack": "^2.8.2",
    "webpack": "~4.42.1"
  }
}
